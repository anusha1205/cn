# Tcp Client
import java.io.*;
import java.net.*;

public class MyTcpClient {
    public static void main(String[] args) {
        try {
            Socket s = new Socket("localhost", 6666); // Connect to TCP Server
            DataOutputStream dout = new DataOutputStream(s.getOutputStream());
            dout.writeUTF("Hello TCP Server"); // Send message to server
            dout.flush();
            dout.close();
            s.close();
        } catch (Exception e) {
            System.out.println(e);
        }
    }
}

# TCp seerver
import java.io.*;
import java.net.*;

public class MyTcpServer {
    public static void main(String[] args) {
        try {
            ServerSocket ss = new ServerSocket(6666); // TCP Server Socket
            System.out.println("TCP Server is running and waiting for a client...");
            Socket s = ss.accept(); // Wait for a client to connect
            System.out.println("TCP Client connected.");

            DataInputStream dis = new DataInputStream(s.getInputStream());
            String str = dis.readUTF(); // Read message from client
            System.out.println("Message from TCP client: " + str);

            dis.close();
            s.close();
            ss.close();
        } catch (Exception e) {
            System.out.println(e);
        }
    }
}
